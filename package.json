{
  "name": "dottree",
  "displayName": "dottree",
  "description": "Maintain directory-tree text with automatic prefixes and Enter/Tab helpers.",
  "version": "0.0.1",
  "publisher": "idlesilver",
  "repository": {
    "type": "git",
    "url": "https://github.com/idlesilver/dottree.git"
  },
  "homepage": "https://github.com/idlesilver/dottree",
  "bugs": {
    "url": "https://github.com/idlesilver/dottree/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:dottree.indent",
    "onCommand:dottree.outdent",
    "onCommand:dottree.newline",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "dottree.indent", "title": "Dot Tree: Indent (maintain prefixes)" },
      { "command": "dottree.outdent", "title": "Dot Tree: Outdent (maintain prefixes)" },
      { "command": "dottree.newline", "title": "Dot Tree: New Line (same level)" }
    ],
    "languages": [
      {
        "id": "tree",
        "aliases": ["Tree", "tree"],
        "extensions": [".tree"]
      }
    ],
    "grammars": [
      {
        "language": "tree",
        "scopeName": "source.tree",
        "path": "./syntaxes/tree.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "dottree.indent",
        "key": "tab",
        "when": "editorTextFocus && dottree.activeTreeLine && !suggestWidgetVisible && !inlineSuggestionVisible"
      },
      {
        "command": "dottree.outdent",
        "key": "shift+tab",
        "when": "editorTextFocus && dottree.activeTreeLine"
      },
      {
        "command": "dottree.newline",
        "key": "enter",
        "when": "editorTextFocus && dottree.activeTreeLine"
      }
    ],
    "configuration": {
      "title": "dottree",
      "properties": {
        "dottree.style": {
          "type": "string",
          "enum": ["unicode", "ascii"],
          "default": "unicode",
          "description": "Tree prefix style to emit after normalization."
        },
        "dottree.indentSubtreeOnSingleCursor": {
          "type": "boolean",
          "default": true,
          "description": "When there's no selection, indent/outdent the current line plus its subtree."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
